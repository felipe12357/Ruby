<%= form_with model: @articleF, data: { turbo: false } do |formArticle| %>
    <p>
        <%= formArticle.label :title%> <br>
        <%= formArticle.text_field :title%> 
    </p>
    <p>
        <%= formArticle.label :description%> <br>
        <%= formArticle.text_area :description%> 
    </p>
    <p>
        <%= formArticle.label :author%> <br>
        <%= formArticle.text_field :author%> 
    </p>
    <p>
        <%= formArticle.submit "Save" %>
    </p>
<% end %>

<% if @articleF.errors.full_messages.any? %>
    <h2>There was an error during the update: </h2>
    <ul>
        <% @articleF.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
        <% end %>
   <ul>
<%end %>